<div class="row">
  <div class="col-sm">
    <h1>Comment</h1>
  </div>
</div>
<div class="row">
  <div class="col-sm">
    <div class="card">
      <div class="card-body">
        <p class="card-text"><%= @comment.body %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <% reaction_links(@comment).each do |link| %>
              <%= link %>
          <% end %>
        </li>
      </ul>
      <div class="card-body">
        <p class="card-subtitle text-muted">
          <%= "Commented #{time_ago_in_words(@comment.created_at)} ago by #{@comment.author_email} in" %>
          <%= link_to "\"#{@comment.post.title}\"", @comment.post %>
        </p>
        <% comment_links(@comment, [:new, :back]).each do |link| %>
            <%= link %>
        <% end %>
      </div>
    </div>
  </div>
</div>
