<% title = local_assigns[:title] || 'Comments' %>

<h1><%= title %></h1>
<table>
  <thead>
  <tr>
    <th>Body</th>
    <th>Author</th>
    <th colspan="<%= actions.size %>"></th>
  </tr>
  </thead>

  <tbody>
  <% comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.author_email %></td>
        <% comment_links(comment, actions).each do |link| %>
            <td><%= link %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
