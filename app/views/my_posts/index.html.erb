<%= render 'posts/table', posts: @draft, actions: [:show, :edit, :publish, :destroy], title: 'Draft Posts' %>
<%= render 'posts/table', posts: @published, actions: [:show, :destroy], title: 'Published Posts' %>

<div class="row">
  <div class="col-sm mb-3">
    <% post_links(@post, current_user, :new).map do |action| %>
        <%= action %>
    <% end %>
  </div>
</div>
